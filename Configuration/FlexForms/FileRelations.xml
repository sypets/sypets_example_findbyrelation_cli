<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Optionen</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.file>
                        <TCEforms>
                            <label>Select file(s) - max 5, allowed files: jpg,svg,png,txt,pdf</label>
                            <config>
                                <type>inline</type>
                                <default></default>
                                <eval>required</eval>
                                <size>1</size>
                                <minitems>1</minitems>
                                <maxitems>5</maxitems>
                                <foreign_field>uid_foreign</foreign_field>
                                <foreign_label>uid_local</foreign_label>
                                <foreign_match_fields>
                                    <fieldname>pi_flexform</fieldname>
                                </foreign_match_fields>
                                <foreign_selector>uid_local</foreign_selector>
                                <foreign_sortby>sorting_foreign</foreign_sortby>
                                <foreign_table>sys_file_reference</foreign_table>
                                <foreign_table_field>tablenames</foreign_table_field>
                                <appearance>
                                    <createNewRelationLinkTitle>Load file</createNewRelationLinkTitle>
                                    <enabledControls>
                                        <dragdrop>1</dragdrop>
                                        <info>1</info>
                                        <sort>0</sort>
                                    </enabledControls>
                                </appearance>
                                <overrideChildTca>
                                    <columns>
                                        <uid_local>
                                            <config>
                                                <appearance>
                                                    <elementBrowserAllowed>jpg,svg,png,txt,pdf</elementBrowserAllowed>
                                                    <elementBrowserType>file</elementBrowserType>
                                                </appearance>
                                            </config>
                                        </uid_local>
                                    </columns>
                                    <!-- suppress displaying title and description here -->
                                    <types type="array">
                                        <numIndex index="0" type="array">
                                            <showitem>--palette--;;filePalette</showitem>
                                        </numIndex>
                                        <numIndex index="1" type="array">
                                            <showitem>--palette--;;filePalette</showitem>
                                        </numIndex>
                                        <numIndex index="2" type="array">
                                            <showitem>--palette--;;filePalette</showitem>
                                        </numIndex>
                                        <numIndex index="3" type="array">
                                            <showitem>--palette--;;filePalette</showitem>
                                        </numIndex>
                                        <numIndex index="4" type="array">
                                            <showitem>--palette--;;filePalette</showitem>
                                        </numIndex>
                                        <numIndex index="5" type="array">
                                            <showitem>--palette--;;filePalette</showitem>
                                        </numIndex>
                                    </types>
                                </overrideChildTca>
                            </config>
                        </TCEforms>
                    </settings.file>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
